	 # distance squared in cm^2 from track extrapolation to CRT hit 
	 #   must be less than this to be considered a match
      fMatchCut: 100
#      fMatchCut: 200
      fMCfudge: 0.2
   # alignment offsets for CRT planes in cm, default is 0.0 for all
   #  leave at 0.0 for simulated data
     }

