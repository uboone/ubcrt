t0recocrthit_data:		
    {			
      module_type: T0recoCRThit
      data_label_TPCtrack: "pandoraCosmic"
      data_label_CRTtzero: "crttzero"
      data_label_CRThit: "merger"
      data_label_flash: "opflashCosmic"
      data_label_DAQHeader: "daq"
      fHardDelay: 40000   #BNB data is 35520?
      fTimeZeroOffset: 69100   #used for fTimeSelect=0
      fverbose: 0
	 # set =0 for GPS ref and =1 to use trigger time
      fTimeSelect: 0
	 # distance squared in cm^2 from track extrapolation to CRT hit 
	 #   must be less than this to be considered a match
      fMatchCut: 100
      fMCfudge: 1.0   # default is 1.0
	 # alignment offsets for CRT planes in cm, default is 0.0 for all
      AlignBotX:    -4.4
      AlignBotZ:    30.2
      AlignAnodeY:  20.0
      AlignAnodeZ:  5.7
      AlignCathY:   -9.8
      AlignCathZ:   0.4
      AlignTopX:   20.8
      AlignTopZ:   -28.1
     }

